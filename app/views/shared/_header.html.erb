<header>
  <nav class="bg-white dark:bg-gray-900 fixed w-full z-20 top-0 start-0 border-b border-gray-200 dark:border-gray-600">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
      <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
        <%= image_tag "BiteBunchLogo.png", class: "w-10 h-10" %>
        <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">BiteBunch</span>
      </a>
      <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
        <% btn_class = "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>

        <% if user_signed_in? %>
          <%= button_to "Log out", destroy_user_session_path, method: :delete, class: btn_class %>
        <% else %>
          <%= button_to "Sign in", new_user_session_path, method: :get, class: btn_class  %>
        <% end %>
      </div>
    </div>
  </nav>
</header>
